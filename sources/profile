# editor
export EDITOR=micro
alias "m=micro"
update_editor () { go get -u github.com/zyedidia/micro/cmd/micro; }

# general
alias "home=cd ~"
alias "srcall=source ~/.zshrc"
alias "c=clear"
alias "cls=clear;ls"
alias "l=tree -CL 1 --dirsfirst"
alias  "prof=~/.profile"
alias "copy=tr -d '\n' | pbcopy"
alias "pcopy=tee >(copy)"

# makefile
alias "mk=make"
alias "mka=make all"
alias "mkb=make build"
alias "mkr=make run"
alias "mkc=make clean"

# macros
mcd() { md $1; cd $1; }
dif() { diff -u $1 $2 | colordiff | less }

# tmux
DISABLE_AUTO_TITLE=true

# git
alias "gmd=gc --amend -C HEAD"
alias "gmdc= gc --amend -c HEAD"
alias "gs=git status"
glc() { git log | head -n 1 | cut -f 2 -d ' ' }
alias gbd='gd $(git merge-base HEAD master) HEAD'

# docker
alias "dk=docker"
alias "dkc=docker-compose"

# all things related to work or to a specific machine should go into this file
source ~/.profile.secret
